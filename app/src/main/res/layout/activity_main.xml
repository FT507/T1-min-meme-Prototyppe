<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Cyan"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="85sp"
        android:layout_gravity="center"
        android:background="@color/Cyan"
        android:gravity="center_horizontal"
        android:padding="22sp"
        android:text="@string/TEXT1"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:src="@drawable/i1"
        android:scaleType="fitXY"
        android:contentDescription="@string/ConI2"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:src="@drawable/i2"
        android:scaleType="fitXY"
        android:contentDescription="@string/ConI1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Yellow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Name"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="21sp"
            android:layout_weight="1"
            android:contentDescription="@string/Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AGE"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="21sp"
            android:layout_weight="1"
            android:contentDescription="@string/AGE"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Yellow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/INFO1"
            android:textSize="21sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:contentDescription="@string/INFO1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/INFO2"
            android:textSize="21sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:contentDescription="@string/ConI2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/INFO3"
            android:textSize="21sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:contentDescription="@string/INFO3"/>
    </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/EM"
    android:textSize="21sp"
    android:background="@color/White"/>


</LinearLayout>